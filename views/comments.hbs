<main>

    <div class="container">

        <div>
            <h1>Comments for {{form.title}}</h1>
        </div>

        <div class="col-md-12 col-lg-12 col-sm-12 {{showaddComment}}">

            <div class="card w-100">
                <div class="card-body">
                    <p class="card-title">Please Add Comment</p>
                    <form method="POST" action="/addComment/{{form._id}}">
                        <div class="form-group">
                            <textarea class="form-control" id="popup-event-des" name="comments" rows="3"></textarea>
                        </div>
                        <div class="col-sm-10">
                            <button type="submit" class=" editForm btn btn-primary">Add Comment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row container">

            {{#each dataComment}}
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="card w-100">
                    <div class="card-header">
                        Comments...
                    </div>
                    <div class="card-body ">
                        <blockquote class="blockquote ">
                            <p>{{comment}}</p>
                            <footer class="blockquote-footer">{{name}}</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>

    {{!-- </div> --}}

</main>