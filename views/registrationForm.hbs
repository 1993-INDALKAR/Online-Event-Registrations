<main>
    <div class="container">
        <div>
            <h2>{{form.title}}</h2>
            <br>
            <p>{{form.description}}</p>
            <br>
            <p>{{form.date}} | {{form.location}} </p>
            <p>{{form.ageRestriction}} | {{form.genderRestriction}} </p>
        </div>

        <div>
            <form method="POST" action="/registerFormToUser/{{form._id}}" id="registerForm">
                <div class="form-group">
                    <label for="person-name" class="col-form-label "></label>
                    <input name="name" id="popup-event-name" type="text" class="form-control " placeholder="Name of Person" id="person-name">
                </div>

                <div class="form-group">
                    <label for="noOfPeople" class="col-form-label "></label>
                    <input name="number" id="popup-event-name" type="numbers" placeholder="Number of people attending event" class="form-control " id="noOfPeople">
                </div>
                
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button id="{{_id}}" type="submit" class=" editForm btn btn-primary">Confirm</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</main>